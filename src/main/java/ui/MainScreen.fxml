<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<AnchorPane prefHeight="800.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MainController">

    <Label layoutY="40" layoutX="50" text="Crypto-Currency Market Analyser" alignment="BASELINE_CENTER">
        <font>
            <Font size="18" />
        </font>
    </Label>

    <Label layoutY="125" layoutX="50" text="Choose Data File To Analyse: " />
    <Button layoutY="120" layoutX="250" text="Data File" fx:id="dataFileButton" />

    <Label layoutX="50" layoutY="170" text="File Name: " />
    <Label layoutY="170" layoutX="150" text="None" fx:id="dataFileNameLabel" />
    <Button fx:id="analyseButton" layoutY="230" layoutX="50" prefWidth="300" prefHeight="50" text="Analyse The Data" />
    <Label textFill="red" layoutX="50" layoutY="280" fx:id="errorMessageLabel" />

    <Label layoutY="350" layoutX="20" text="Big Data Analysis Course Term Project">
        <font>
            <Font size="12"/>
        </font>
    </Label>

</AnchorPane>